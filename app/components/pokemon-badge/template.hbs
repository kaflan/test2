<h3> {{pokemon.name}}</h3>
<p>Speed: {{pokemon.speed}}</p>

<img src="https://pokeapi.co/media/img/{{pokemon.national_id}}.png" alt="image for {{pokemon.name}}">
{{#deferred-content pokemonImage as |d| }}
  {{#d.fulfilled as |image| }}
    <img src="{{image}}" alt="image for {{pokemon.name}}">
  {{/d.fulfilled}}
  {{#d.rejected as |error| }}
    {{error}}
  {{/d.rejected}}
{{/deferred-content}}
{{yield}}
